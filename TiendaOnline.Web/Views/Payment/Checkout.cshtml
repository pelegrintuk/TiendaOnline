@model TiendaOnline.Application.DTOs.PaymentDto

@{
    ViewData["Title"] = "Pago";
}

<h1>Pago</h1>

<form method="post" action="/Orders/ProcessPayment" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="cardNumber" class="form-label">Número de Tarjeta:</label>
        <input type="text" id="cardNumber" name="CardNumber" class="form-control" required />
        <div class="invalid-feedback">Por favor, introduce el número de tarjeta.</div>
    </div>
    <div class="mb-3">
        <label for="expiryDate" class="form-label">Fecha de Expiración:</label>
        <input type="month" id="expiryDate" name="ExpiryDate" class="form-control" required />
        <div class="invalid-feedback">Por favor, introduce la fecha de expiración.</div>
    </div>
    <div class="mb-3">
        <label for="cvv" class="form-label">CVV:</label>
        <input type="text" id="cvv" name="CVV" class="form-control" required />
        <div class="invalid-feedback">Por favor, introduce el CVV.</div>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Pagar</button>
    </div>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
}
